.seasons
  margin 0
  border-bottom 2px solid $primary
  li
    text-align center
    border-radius 0
    border-bottom 1px solid $border-primary
    &:last-of-type
      border 0
    a
      display block
      padding .75em .5em
      color $primary
      text-decoration none
      &:hover
        background $primary-ll
      &.active
        background $list-selected
        color white
