.migrations
  font-size 1em
  .pathTableRow
    background white
    &:hover
      background lighten($secondary-ll, 50%)
  thead
  tbody
    tr
    th
      &
      td
        text-align left
        &:first-of-type
          padding-left 2em
        &:last-of-type
          padding-right 2em
    tr
      td
        border-color lighten($primary-ll, 25%)
  > thead
    > th
      > td
        border-bottom-width 1px
  &.group-is-selected
    > tbody
      > tr
        &:not(.selected)
          td
            opacity .3
            border-color transparent
          &:hover
            td
              opacity 1
  tbody
    tr
      td
        &.weekly-migrations
          padding 0

.pathTableRow
  &.selected
    background lighten($primary-l, 30%)
    font-weight bold
    border-top 2px solid $primary-l
    &:hover
      background darken(@background, 2%)
  td
    &:last-of-type
      &:after
        content '\f13a'
        font-family FontAwesome
        float right
        opacity 0
        margin-right -1em
  &.selected
    td
      &:last-of-type
        &:after
          content '\f139'

  &:hover
    td
      &:last-of-type
        &:after
          opacity 1

.pathData
  display none
  &.selected
    display table-row
    border-bottom 2px solid $primary-l

.weekly-migrations-detail
  padding 0
  margin 0
  font-size .9em
  thead
    > tr
      text-align left
      background lighten($primary-ll, 30%)
      > th
        border-bottom-width 1px
  thead
  tbody
    tr
    th
      &
      td
        &:first-of-type
          padding-left 4em
        &:last-of-type
          padding-right 2em
