.sidebar
  box-shadow none

.sidebar-content
  background $whiteBG

.sidebar-main
  .sidebar-tabs
    border-left 3px solid darken($blue,10%)

.sidebar-tabs
  opacity 1
  background $blue-transparent
  width 55px
  &.right
    background linear-gradient(to right, rgba(255,0,0,0) 75% , $blue-transparent 25%)

#sidebar-plus-button
#sidebar-minus-button
  color white

.fa-white
  font-size 2em
  color white

.sidebar-zoom-in
  background #866753
  overflow hidden
  position absolute
  bottom 55px
  left 10px

.sidebar-zoom-out
  background #866753
  overflow hidden
  position absolute
  bottom 85px
  left 10px

.sidebar-zoom-out:hover
.sidebar-zoom-in:hover
  background #866753
  opacity .75

#sidebar
  height 100%
  overflow visible

.sidebar-pane
  width 100%
  height 100% /* positioning to bottom needs height propagated from body */
