@import '{styles-base}/rupture'
@import '{styles-base}/variables'
@import '{styles-base}/mixins'
@import 'globals.import'
@import 'birt.import'
@import 'map.import'
@import 'overlay.import'
@import 'tables.import'

body
html
.page-wrapper
  height 100%
  width 100%

body
  primaryFont()

.bootstrap-datetimepicker-widget.dropdown-menu
  font-size small

.tab-content
  overflow-x hidden
  overflow-y auto

.date > span.input-group-addon
  background-color #ddd

.applyFilter
  padding 5px

.tokenized
  word-wrap normal

.tokenized.main
  max-width 300px
  background $ll-gray

.token-input
  font-size 1em

.status-bar
  border-top solid 2px darken($tabs-bg, 10%)
  background-color lighten($primary, 70%)
  margin-bottom 0px
  padding-top 1em
  padding-bottom 1em

.status-bar-text
  padding-right 0
  padding-left 0
  color #333

.status-bar-val
  font-weight bold
  padding-left 2px

.spinner
  position absolute
  right 15px
  top 17px
  font-size 16px
  color #666
  z-index 2000

.leaflet-container
  background-color #CDD2D4

.leaflet-top.leaflet-left
  z-index 1004
.leaflet-top.leaflet-right
  z-index 1003
.leaflet-bottom.leaflet-left
  z-index 1002
.leaflet-bottom.leaflet-right
  z-index 1001

.leaflet-bottom.leaflet-right
  bottom $play-controls-height

p.intro
  line-height 1.5
  margin 5px 0 35px 0
  font-size larger

#container
  width 100%
  height 100%

.title
  margin-top 0
  margin-bottom 10px
  text-align center

.notice
  margin 10px 0 5px 0
  line-height 1.5
  text-align center

.info
  padding 6px 8px
  font 14px/16px fonts
  background white
  background rgba(white, 1)
  box-shadow 0 0 15px rgba(black, 0.2)
  border-radius 5px

@media all and (max-width: 480px)
  /* styles for iPhone/Android landscape (and really narrow browser windows) */
  .notice
    font-size 11px

@media all and (max-width: 320px)
  /* styles for iPhone/Android portrait */
  .notice
    font-size 11px

@media all and (max-width: 240px)
  /* styles for smaller devices */
  .notice
    font-size 11px

.leaflet-heatmap-layer
  z-index -1

.searchBar
  position relative
  width 100%
  border-left 0
  border-right 0
  background $ll-gray
  border-bottom 1px solid $primary
  font-size 1em

#searchIcon
  verticallyCenter()
  left 10px
  font-size 1.4em
  color $primary

.twitter-typeahead
  position static !important // Overides typeahead's inline styling

.tt-dropdown-menu
  border-top-left-radius 0
  border-top-right-radius 0
  border 0
  height 635px
  overflow-y auto
  overflow-x hidden

.typeahead-code
  position absolute
  left 10px
  top 5px
  min-width 15%
  font-size 115%
  font-weight bold
  font-weight 800
  color #666

.typeahead-info
  color #666
  font-size 95%
  .typeahead-additional-info
    display block
    font-size 85%
    color #999
    font-style italic
  > span
    text-transform capitalize

.typeahead-footer
  color #666
  font-size 95%
  margin 2px 0 2px 15px

.pull-middle
  display table-cell
  vertical-align middle
  float none

.pager
  display inline

.tt-suggestion
  position relative
  padding 5px 10px 5px 20%
  border-bottom 1px solid #f9f9f9
  &:last-child
    border-bottom 0

.tt-suggestion
.tt-suggestion
  &.tt-cursor
  &.tt-is-under-cursor
    background lighten(#DDD, 10%)
    &.airport-name
      color #555
  strong
    color #000

.tt-input
  height 30px
  font-weight 20px

.tokenfield
  border-radius 0
  box-shadow none
  &.form-control
    &.input-sm
      padding-left 40px
      border 0

.input-group-sm .token
.tokenfield.input-sm .token
  min-height 26px
  font-size 16px
  margin-top 2px
  margin-bottom 0

.leaflet-control-layers-base
.leaflet-control-layers-overlays
  padding-left 20px
  padding-right 20px

.sidebar-highlight
  color #333

.pager li > a, .pager li > span
  padding 5px 5px
  border-radius 8px

.datatable-container
  background-color white

.datatable-row
  margin-top 2px
  margin-bottom 2px
  display inline-block
  width 100%

.datatable-heading
  padding 5px
  font-size 18px
  color $primary
  font-weight bold

.datatable-hr
  border-bottom 2px solid $primary

.filter
  display table;
  height 100%

.filter-header
  background-color #eee
  padding 5px
  min-width initial
  border-radius 2px

.filter-label
  font-size 1.1em
  font-weight bold

.filter-group
  white-space nowrap
  padding 2px

.filter-wrapper
  margin-left 25px
  margin-right 25px

.filter-row
  display inline-block
  width 100%
  margin-top 10px
  margin-bottom 10px

.limit-bar
  display inline-block
  width 100%
  margin-top 10px
  margin-bottom 10px

.btn-filter
  width 100%
  border-radius 0px
  color #333
  background-color #38B678
  border-color #318f80
  font-weight bold

.btn-filter:hover
  color #eee

.leaflet-control-layers
  box-shadow none
  border-radius 0px
  background none

.layers-wrapper
  padding 40px 40px 40px 35px

.layers-title
  margin-bottom 8px
  font-weight 600
  font-size 20px

.dataTable th
  text-align center

.dtHidden
  display none

.toast-error, .toast-info, .toast-warning, .toast-success
  width 70% !important
  min-width 300px !important

.toast-message
  text-align center !important
