@import '{styles-base}/variables'

.leaflet-left.leaflet-top
  left 0
  right 0
  top 0
  border-radius 0
  transition .5s
  .info
    display flex
    align-items center
    width 100%
    margin 0
    padding 15px
    box-shadow none
    border-radius 0
    font-family $primary-font
    min-height 60px
    background alpha($whiteBG, 80%)
    transition .2s
    &.active
      background $whiteBG
    h2
      display inline-block
      margin 0
      font-weight 800
      font-size 2em
      color darken($primary, 20%)
    ul
      margin-left 20px
      margin-bottom 0
      color $dd-gray
      span
        font-weight 600
      &
      li
        display inline-block
      li
        font-size 1.3em
        margin-right 20px
    p
      margin 0
      color $d-gray
      align-self center
