@import 'nib'
@import '{styles-base}/tooltips'
@import '{styles-base}/variables'

.logo
  background url("../../../images/logo.svg") no-repeat
  background-size 100%
  background-position center center
  width 100%
  min-height 65px
  margin 0
  text-indent -9999px
  background-repeat no-repeat
  padding 30px 0
  margin-right auto
  margin-left auto
  border-bottom 4px solid $primary

.searchBar
  border-top 0
  .form-control
    &:focus
    &.focus
      outline 0
      box-shadow none
      background $ll-gray
