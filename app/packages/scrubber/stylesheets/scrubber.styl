@import '../../core/client/stylesheets/variables.import'

.sidebar-left-closed
  .leaflet-left.leaflet-bottom
    left $sidebar-tabs-width - 10px

.sidebar-right-closed
  .leaflet-left.leaflet-bottom
    right $data-table-width - 20px

.leaflet-left.leaflet-bottom
  left $sidebar-full-width
  right 0
  border-radius 0
  transition .5s
  .scrubber
    display flex
    align-items baseline
    width 100%
    margin 0
    padding 12px 15px 15px
    box-shadow none
    border-radius 0
    font-family $primary-font
    min-height 60px
    background alpha($whiteBG, 80%)
    transition .2s
    &.active
      background $whiteBG
    h2
      display inline-block
      margin 0
      font-weight 800
      font-size 2em
      color darken($primary, 20%)
    ul
      margin-left 20px
      margin-bottom 0
      color $dd-gray
      span
        font-weight 600
      &
      li
        display inline-block
      li
        font-size 1.3em
        margin-right 20px
    p
      margin 0
      color $d-gray
      align-self center

.scrubber-container
  width calc(100% - 120px)

.scrubber-play, .scrubber-stop
  width 50px
  float left
  overflow hidden

.scrubber-stop-disabled
.scrubber-play-disabled
  opacity .25

.right-slider-container
  position relative
  margin-top 15px
  height 50px
  left 130px
  width calc(100% - 60px)

#slider
  width 100%

@-webkit-keyframes pulse_animation
 0%
    -webkit-transform: scale(1)
 30%
    -webkit-transform: scale(1)
 40%
    -webkit-transform: scale(1.08)
 50%
    -webkit-transform: scale(1)
 60%
    -webkit-transform: scale(1)
 70%
    -webkit-transform: scale(1.08)
 80%
    -webkit-transform: scale(1)
 100%
    -webkit-transform: scale(1)

.scrubber-paused
 -webkit-animation-name 'pulse_animation'
 -webkit-animation-delay 0s
 -webkit-animation-duration 1500ms
 -webkit-animation-iteration-count infinite
 -webkit-animation-timing-function linear

div.scrubber-progress
  position relative
  width 5px
  height 18px
  background-color red
  left 0%
  bottom 18px
  z-index 1
  opacity .7
