@import '../../core/client/stylesheets/variables.import'

.sidebar-left-closed
  .leaflet-left.leaflet-bottom
    left $sidebar-tabs-width - 10px

.sidebar-right-closed
  .leaflet-left.leaflet-bottom
    right $data-table-width - 20px

.leaflet-left.leaflet-bottom
  left $sidebar-full-width
  right 0
  border-radius 0
  transition .5s
  .scrubber
    display flex
    align-items baseline
    width 100%
    margin 0
    padding 12px 15px 15px
    box-shadow none
    border-radius 0
    font-family $primary-font
    min-height 60px
    background alpha($whiteBG, 80%)
    transition .2s
    &.active
      background $whiteBG
    h2
      display inline-block
      margin 0
      font-weight 800
      font-size 2em
      color darken($primary, 20%)
    ul
      margin-left 20px
      margin-bottom 0
      color $dd-gray
      span
        font-weight 600
      &
      li
        display inline-block
      li
        font-size 1.3em
        margin-right 20px
    p
      margin 0
      color $d-gray
      align-self center



.scrubber-container
  width 100%

.scrubber-play
  width 60px
  float left
  overflow hidden

.right-slider-container
  margin-top 15px
  left 60px
  overflow hidden
  width auto
  height 50px

#slider
  width 100%
