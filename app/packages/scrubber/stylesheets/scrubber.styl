@import '{styles-base}/variables'

.sidebar-left-closed
  .leaflet-left.leaflet-bottom
    left $sidebar-main-menu-width

.sidebar-right-closed
  .leaflet-left.leaflet-bottom
    right $sidebar-main-width

.leaflet-left.leaflet-bottom
  left $sidebar-main-width
  right 0
  border-radius 0
  transition .5s
  .scrubber
    display flex
    align-items center
    min-height $play-controls-height
    width 100%
    margin 0
    padding 12px 15px 15px
    box-shadow none
    border-radius 0
    font-family $primary-font
    background alpha($whiteBG, 50%)
    transition .2s
    &.active
      background $whiteBG
    h2
      display inline-block
      margin 0
      font-weight 800
      font-size 2em
      color darken($primary, 20%)
    ul
      margin-left 20px
      margin-bottom 0
      color $dd-gray
      span
        font-weight 600
      &
      li
        display inline-block
      li
        font-size 1.3em
        margin-right 20px
    p
      margin 0
      color $d-gray
      align-self center

.scrubber-container
  width calc(100% - 120px)

.scrubber-play
.scrubber-stop
  width 50px
  overflow hidden
  cursor pointer
  margin-right 1em

.scrubber-play
  &:hover
    color $secondary

.scrubber-stop
  &:not(.scrubber-stop-disabled)
    &:hover
      color darken($delete, 10%)

.scrubber-stop-disabled
.scrubber-play-disabled
  opacity .25

.right-slider-container
  position relative
  width calc(100% - 60px)
  display flex
  margin-left 2em
  margin-right 2em

#slider
  width 100%

@-webkit-keyframes pulse_animation
 0%
    -webkit-transform: scale(1)
 30%
    -webkit-transform: scale(1)
 40%
    -webkit-transform: scale(1.08)
 50%
    -webkit-transform: scale(1)
 60%
    -webkit-transform: scale(1)
 70%
    -webkit-transform: scale(1.08)
 80%
    -webkit-transform: scale(1)
 100%
    -webkit-transform: scale(1)

.scrubber-paused
 -webkit-animation-name 'pulse_animation'
 -webkit-animation-delay 0s
 -webkit-animation-duration 1500ms
 -webkit-animation-iteration-count infinite
 -webkit-animation-timing-function linear

.scrubber-progress
  position absolute
  width 2px
  height 18px
  top 50%
  transform translate(0, -50%)
  background-color $primary
  left 0%
  z-index 5
  opacity .7

.noUi-handle
  z-index 10
